{
  "name": "vueweave",
  "version": "0.0.3",
  "type": "module",
  "main": "lib/package/index.js",
  "files": [
    "./lib/package"
  ],
  "types": "./lib/package/index.d.ts",
  "exports": {
    ".": {
      "types": "./lib/package/index.d.ts",
      "import": "./lib/package/index.js"
    },
    "./style.css": "./lib/package/style.css"
  },
  "directories": {
    "lib": "lib/package"
  },
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc -b && vite build",
    "build:module": "vite build --config vite.config.lib.ts && vite build --config vite.config.css.ts",
    "lint": "eslint src --fix",
    "preview": "vite preview",
    "format": "prettier --write '{src/**/*,*}.{js,ts,vue,json}'"
  },
  "license": "MIT",
  "author": "Isamu Arimoto",
  "bugs": {
    "url": "https://github.com/receptron/grapys/issues"
  },
  "homepage": "https://vueweave.com/",
  "peerDependencies": {
    "pinia": "^3.0.0",
    "vue": "^3.5.0"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.18",
    "@types/node": "^25.0.3",
    "@vitejs/plugin-vue": "^6.0.3",
    "prettier": "^3.7.4",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "vite-plugin-dts": "^4.5.4",
    "vue": "^3.5.26",
    "vue-router": "^4.6.4",
    "vue-tsc": "^3.2.1"
  }
}
