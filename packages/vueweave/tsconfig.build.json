{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "noEmit": false,
    "outDir": "lib",
    "rootDir": "src",
    "skipLibCheck": true
  },
  "include": ["src/package/**/*.ts", "src/package/**/*.vue", "src/shims-vue.d.ts"],
  "exclude": ["node_modules", "dist", "lib", "src/**/*.spec.ts"]
}
